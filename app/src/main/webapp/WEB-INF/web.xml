<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    metadata-complete="false"
    version="3.1">

    <servlet>
    	<display-name>DeleteEmployeeServlet</display-name>
    	<servlet-name>DeleteEmployeeServlet</servlet-name>
    	<servlet-class>com.exercise8.app.DeleteEmployeeServlet</servlet-class>
    </servlet>

    <servlet>
    	<display-name>DeleteRoleServlet</display-name>
    	<servlet-name>DeleteRoleServlet</servlet-name>
    	<servlet-class>com.exercise8.app.DeleteRoleServlet</servlet-class>
    </servlet>    

    <servlet>
    	<display-name>UpdateRoleServlet</display-name>
    	<servlet-name>UpdateRoleServlet</servlet-name>
    	<servlet-class>com.exercise8.app.UpdateRoleServlet</servlet-class>
    </servlet>        

    <servlet>
    	<display-name>AddRoleServlet</display-name>
    	<servlet-name>AddRoleServlet</servlet-name>
    	<servlet-class>com.exercise8.app.AddRoleServlet</servlet-class>
    </servlet>  

    <servlet>
        <display-name>UpdateEmployeeRoleServlet</display-name>
        <servlet-name>UpdateEmployeeRoleServlet</servlet-name>
        <servlet-class>com.exercise8.app.UpdateEmployeeRoleServlet</servlet-class>
    </servlet>   

    <servlet>
        <display-name>AddContactInfoServlet</display-name>
        <servlet-name>AddContactInfoServlet</servlet-name>
        <servlet-class>com.exercise8.app.AddContactInfoServlet</servlet-class>
    </servlet>                

    <servlet-mapping>
    	<servlet-name>DeleteEmployeeServlet</servlet-name>
    	<url-pattern>/DeleteEmployeeServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    	<servlet-name>DeleteRoleServlet</servlet-name>
    	<url-pattern>/DeleteRoleServlet</url-pattern>
    </servlet-mapping>    

    <servlet-mapping>
    	<servlet-name>UpdateRoleServlet</servlet-name>
    	<url-pattern>/UpdateRoleServlet</url-pattern>
    </servlet-mapping>       

    <servlet-mapping>
    	<servlet-name>AddRoleServlet</servlet-name>
    	<url-pattern>/AddRoleServlet</url-pattern>
    </servlet-mapping>    

    <servlet-mapping>
        <servlet-name>UpdateEmployeeRoleServlet</servlet-name>
        <url-pattern>/UpdateEmployeeRoleServlet</url-pattern>
    </servlet-mapping>  

    <servlet-mapping>
        <servlet-name>AddContactInfoServlet</servlet-name>
        <url-pattern>/AddContactInfoServlet</url-pattern>
    </servlet-mapping>              
</web-app>
